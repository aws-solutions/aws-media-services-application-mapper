{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Media Services Application Mapper (MSAM) browser application (ID: DEV_0_0_0)",
    "Resources": {
        "MSAMBrowserAppBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {}
        },
        "MSAMCustomResourceRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AdministratorAccess"
                ],
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "lambda.amazonaws.com"
                            ]
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }]
                },
                "Path": "/"
            }
        },
        "MSAMWebContentResource": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Fn::Join": [
                            "-", [
                                "rodeolabz",
                                {
                                    "Ref": "AWS::Region"
                                }
                            ]
                        ]
                    },
                    "S3Key": "msam/CUSTOM_RESOURCE_FILE"
                },
                "Environment": {
                    "Variables": {
                        "BUILD_STAMP": "DEV_0_0_0",
                        "ZIP_DIGEST": "ZIP_DIGEST_VALUE"
                    }
                },
                "Handler": "lambda_function.lambda_handler",
                "Description": "MSAM Lambda for custom CloudFormation resource for loading web application",
                "MemorySize": 2560,
                "Role": {
                    "Fn::GetAtt": [
                        "MSAMCustomResourceRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.6",
                "Timeout": 300
            }
        },
        "MSAMWebContent": {
            "Type": "AWS::CloudFormation::CustomResource",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "MSAMWebContentResource",
                        "Arn"
                    ]
                },
                "BucketName": {
                    "Ref": "MSAMBrowserAppBucket"
                },
                "StackName": {
                    "Ref": "AWS::StackName"
                },
                "ZIP_DIGEST": "ZIP_DIGEST_VALUE"
            }
        }
    },
    "Outputs": {
        "MSAMBrowserURL": {
            "Value": {
                "Fn::Join": [
                    "", [
                        "https://",
                        {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        ".s3.amazonaws.com/index.html"
                    ]
                ]
            },
            "Description": "URL for the MSAM browser application"
        }
    }
}