        "MSAMElementalLiveStatus": {
            "Type": "AWS::SSM::Document",
            "Properties": {
                "Content": {
                    "schemaVersion": "1.2",
                    "description": "Is the Elemental Live process running?",
                    "runtimeConfig": {
                        "aws:runShellScript": {
                            "properties": [{
                                "id": "0.aws:runShellScript",
                                "runCommand": [
                                    "sudo /etc/init.d/elemental_se status || sudo systemctl status elemental_se"
                                ]
                            }]
                        }
                    }
                },
                "Tags": [{
                    "Key": "MSAM-NodeType",
