{
  "name": "cdk",
  "version": "1.0.0",
  "description": "Synthesize templates for Media Services Application Mapper using AWS Cloud Development Kit (CDK).",
  "license": "Apache-2.0",
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/solutions"
  },
  "bin": {
    "cdk": "bin/media-services-application-mapper.js"
  },
  "scripts": {
    "cleanup": "tsc --build ./ --clean && cdk context --clear && rm -rf dist cdk.out && rm -f package-lock.json",
    "build": "tsc",
    "watch": "tsc -w",
    "pretest": "sh pretest.sh",
    "test": "jest --coverage",
    "cdk": "cdk",
    "presynth": "sh pretest.sh && npm run build",
    "synth": "cdk synth -q"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^20.1.1",
    "aws-cdk": "^2.87.0",
    "cdk-nag": "^2.27.73",
    "jest": "^29.4.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.87.0",
    "constructs": "^10.2.69"
  }
}
